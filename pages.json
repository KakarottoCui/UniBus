{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "公交路线"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	    ,{
            "path" : "pages/login/login",
            "style" :                                                                                    
            {
				"h5": {
					"titleNView": false
				},
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        },{
            "path" : "pages/login/regist",
            "style" :                                                                                    
            {
				"h5": {
					"titleNView": false
				},
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        
        ,{
            "path" : "pages/editQuestion/editQuestion",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "留言",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/routePlan/routePlan",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "线路规划",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "公交线路",
		"navigationBarBackgroundColor": "#09a0f7",
		"backgroundColor": "#e9ecef"
	},
	"uniIdRouter": {},
	
	"tabBar": {
		"color": "#000",
		"selectedColor": "#09a0f7",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/img/tbar_icon/home.png",
				"selectedIconPath": "./static/img/tbar_icon/home-active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/routePlan/routePlan",
				"iconPath": "static/img/tbar_icon/map.png",
				"selectedIconPath": "./static/img/tbar_icon/map-active.png",
				"text": "路线"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/img/tbar_icon/my.png",
				"selectedIconPath": "./static/img/tbar_icon/my-active.png",
				"text": "我的"
			}
		]
	}
